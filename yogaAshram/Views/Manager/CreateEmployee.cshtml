@model AccountCreateModelView

@{
    ViewBag.Title = "Регистрация ";
    Layout = "_Layout";
}
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <h2>Регистрация нового пользователя</h2>
        <form method="post" asp-controller="Manager" asp-action="CreateEmployee">
            <div asp-validation-summary="ModelOnly"></div>

            <label asp-for="Role">В качестве кого регистрируетесь?</label>
            <select id="list" class="form-control mb-4" asp-for="Role" onchange="change()">
                <option></option>
                <option value="marketer">маркетолог</option>
                <option value="seller">продавец</option>
                <option value="coach">администратор</option>
            </select>
            <div>
                <span asp-validation-for="Email"></span>
                <label asp-for="Email"></label><br/>
                <input class="form-control mb-4" asp-for="Email"/>
            </div>
            <div>
                <span asp-validation-for="UserName"></span>
                <label id="username"></label><br/>
                <input class="form-control mb-4" asp-for="UserName"/>
            </div>
            <div>
                <span asp-validation-for="NameSurname"></span>
                <label asp-for="NameSurname"></label><br/>
                <input class="form-control mb-4" asp-for="NameSurname"/>
            </div>
            <div>
                <div class="form-group">
                    <span asp-validation-for="Password"></span>
                    <label asp-for="Password"></label><br/>
                    <div class="input-group">
                        <input id="password" type="password" placeholder="Пароль" class="form-control" asp-for="Password"/>
                    </div>
                </div>
            </div>
            <div>
                <div class="form-group">
                    <span asp-validation-for="ConfirmPassword"></span>
                    <label asp-for="ConfirmPassword"></label><br/>
                    <div class="input-group">
                        <input id="passwordConfirm" type="password" placeholder="Пароль" class="form-control" asp-for="ConfirmPassword"/>
                    </div>
                </div>
            </div>
            <div>
                <br/>
                <input class="btn btn-info btn-block my-4" type="submit" value="Регистрация"/>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script>
    
     function change() {
        	var z = document.getElementById("list").value;
        	if (z === "marketer"){
        	    document.getElementById("username").innerHTML = "Имя   " + "маркетолога" ;
        	}
        	else if (z === "seller"){
        	     document.getElementById("username").innerHTML = "Имя   " + "продавца" ;
        	}
        	else if (z === "coach"){
        	     document.getElementById("username").innerHTML = "Имя   " + "администратора" ;
        	 }	
        }
     </script>
}