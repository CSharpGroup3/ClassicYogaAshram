@model ManagerEditModelView

<!-- Modal -->
<div class="modal fade" id="editPrifileModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Редактирование профиля</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="EditManager" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Ваш логин</label>
                        <input class="form-control" asp-for="UserName">
                        <span asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group">
                        <label>Ваша почта</label>
                        <input class="form-control" asp-for="Email">
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label>Ваши имя и фамилия</label>
                        <input class="form-control" asp-for="NameSurname">
                        <span asp-validation-for="NameSurname"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>
