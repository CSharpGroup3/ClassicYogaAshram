@model ManagerEditModelView
@{
    ViewBag.Title = "Редактирование профиля менеджера";
    Layout = "_Layout";
}

<h2>Редактирование профиля</h2>
<div class="row">
    <div class="col-md-5">
        <form asp-action="EditManager" method="post">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input class="form-control" asp-for="Email" type="email">
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName">Логин пользователя</label>
                <input class="form-control" asp-for="UserName" type="text">
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameSurname">ФИО</label>
                <input class="form-control" asp-for="NameSurname" type="text">
                <span asp-validation-for="NameSurname"></span>
            </div>
            <input type="hidden" asp-for="Id">
            <input type="hidden" value="@Model.Id"/>
            <input type="submit" value="Сохранить" class="btn btn-outline-dark">
        </form>
    </div>
</div>