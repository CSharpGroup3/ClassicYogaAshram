@model Withdrawal

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Снять деньги</h2>
<div class="container">
  <form method="post" asp-controller="Transactions" asp-action="Withdraw">

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Сумма</label>
      <div class="col-sm-8">
        <input asp-for="Sum" class="form-control" type="number" placeholder="Сумма">
        <span asp-validation-for="@Model.Sum"></span>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 col-form-label">Комментарий</label>
      <div class="col-sm-8">
        <textarea asp-for="Comment" class="form-control"  type="text" placeholder="Комментарий" ></textarea>
        <span asp-validation-for="Comment"></span>
      </div>
      <input asp-for="BranchId" class="form-control" value="@Model.BranchId" type="hidden">
    </div>
    <button type="submit" class="btn btn-primary">Снять</button>
  </form>

</div>
