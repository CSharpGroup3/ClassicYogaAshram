@using System.Collections
@model ClientsCreateModelView

@{
    ViewBag.Title = "Добавление клиентов";
    Layout = "_Layout";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <h2>Добавить клиента</h2>
        <form method="post" asp-controller="Clients" asp-action="CreateClients">
            <div>
                <span asp-validation-for="NameSurname"></span>
                <label>Ф.И.О</label><br/>
                <input class="form-control mb-4" asp-for="NameSurname"/>
            </div>
            <div>
                <span asp-validation-for="PhoneNumber"></span>
                <label>Номер телефона</label><br/>
                <input class="form-control mb-4" asp-for="PhoneNumber"/>
            </div>
            <div>
                <label>Группы</label>
                <select class="form-control mb-4" asp-for="Group">
                    @if (Enumerable.Count(@ViewBag.Groups) == 0)
                    {
                        <p>Не найдено ни одного группы</p>
                    }
                    else
                    {
                        @foreach (Group group in (IEnumerable) @ViewBag.Groups)
                        {
                            <option value="@group.Id">@group.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form_row">
                <label>
                    Статус клиента
                    <select asp-for="ClientType">
                        <option value="1">Пробник</option>
                        <option value="2">Старый клиент</option>
                        <option value="3">Уже не заниметься</option>
                    </select>
                </label>
            </div>
            <div>
                <br/>
                <input class="btn btn-info btn-block my-4" type="submit" value="Добавить"/>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}