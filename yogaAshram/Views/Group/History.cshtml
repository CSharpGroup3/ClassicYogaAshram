@using System.Collections
@using Castle.Core.Internal
@using yogaAshram.Services
@model List<List<Attendance>>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
   
}



<form method="get">
    <div class="form-inline form-group">
        <label class="control-label">Группа </label> <span> </span>
       <select name="groupId" id="" class="form-control mb-2 mr-sm-2">
       @foreach (var gr in @ViewBag.Groups)
       {
           <option value="@gr.Id"> @gr.Name</option>
       }
       </select>
        <label class="control-label">Месяц </label><span> </span>
        <select name="month" id="" class="form-control mb-2 mr-sm-2">
       
            <option value="1">Январь</option>
            <option value="2">Февраль</option>
            <option value="3">Март</option>
            <option value="4">Апрель</option>
            <option value="5">Май</option>
            <option value="6">Июнь</option>
            <option value="7">Июль</option>
            <option value="8">Август</option>
            <option value="9">Сентярь</option>
            <option value="10">Октябрь</option>
            <option value="11">Ноябрь</option>
            <option value="12">Декабрь</option>
        
            
        }   </select>
        <label class="control-label">Год </label><span> </span>
        <input name="year" type="number" min="2019"  max="2050"  class="form-control mb-2 mr-sm-2" placeholder="2020"/>
        <input type="submit" value="Фильтр" class="btn btn-primary mb-2" />
    </div>
</form>





@if(@Model.Count>0)
{
    <p> Список посещении центра @Model[0][0].Group.Branch.Name </p>
 <div class="table-responsive">
    <table class=" table table-bordered small">
    
    
        <tr>
            <thead>
            <th>
                ФИО клиента
            </th>
            <th>
                Дата абонемента
            </th>
    
            @for (int i = 1; i < @Model[0].Count + 1; i++)
            {
                <th>
                    @i
    
                </th>
            }
            </thead>
               
        </tr>
      <tbody>
    
             @foreach (var att in @Model)
             {
                 <tr>
                     <td>
                         @att[0].Client.NameSurname
                     </td>
                     <td>
                         @att[0].ClientsMembership.DateOfPurchase.ToShortDateString() - @att[0].ClientsMembership.DateOfExpiry.ToShortDateString()
                     </td>
                     @foreach (var a in @att.OrderBy(p => p.Date))
                     {
    
                         <td style="background-color: @a.GetColor()">
                             @a.Date.ToShortDateString()<br/>
                             @GetEnumDescription.GetDescription(a.AttendanceState)
                         </td>
                     }
    
                 </tr>
                 
    
             }
    </tbody>
         </table>

    </div>



}
else{
    <p> Список пуст </p>
}


 