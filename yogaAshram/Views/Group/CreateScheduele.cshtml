
@using System.Collections
@model Schedule

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <h2>Добавить Раписание</h2>
        @if (Enumerable.Count(@ViewBag.Groups) > 0)
        {
            <form method="post" asp-controller="Group" asp-action="CreateScheduele">
                <label>Группа</label>
                <select class="form-control mb-4" asp-for="GroupId">
                  
                    @foreach (Group group in (IEnumerable) @ViewBag.Groups)
                    {
                        <option value="@group.Id">@group.Name</option>
                    }
                </select>
                <div>
                    <span asp-validation-for="DayOfWeek"></span>
                    <label >День недели</label><br/>
                    <select class="form-control mb-4" asp-for="DayOfWeek">
                        <option value="monday">понедельник</option>
                        <option value="tuesday">вторник</option>
                        <option value="wednesday">среда</option>
                        <option value="thursday">четверг</option>
                        <option value="friday">пятница</option>
                        <option value="saturday">суббота</option>
                    </select>
                      <span asp-validation-for="DayOfWeek"></span>
                </div>
                   <label >Начало</label><br/>
                <div class="input-group">
                    <input type="number" id="firstTimeId" min="8" max="20" step="1" class="form-control" asp-for="FromHours" placeholder="час"> 
                <span asp-validation-for="FromHours"></span>
                    <input type="number"   min="0" max="30" step="30" class="form-control" asp-for="FromMinutes"   placeholder="минута">
                     <span asp-validation-for="FromMinutes"></span>
                </div>
                <div>
                    <br/>
                    <input class="btn btn-info btn-block my-4" type="submit" value="Создать"/>
                </div>
            </form>
        }
        else
        {
            <p>Для создания групп добавитье филиал</p>
        }
       
    </div>
</div>
@section Scripts
{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

