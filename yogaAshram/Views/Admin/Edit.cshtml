@model EmployeeEditModelView

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit"  onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="modal-body">
                                <div class="form-group">
                                    <label>Ваш логин</label>
                                    <input class="form-control" asp-for="UserName">
                                    <span asp-validation-for="UserName"></span>
                                </div>
                                <div class="form-group">
                                    <label>Ваша почта</label>
                                    <input class="form-control" asp-for="Email">
                                    <span asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <label>Ваши имя и фамилия</label>
                                    <input class="form-control" asp-for="NameSurname">
                                    <span asp-validation-for="NameSurname"></span>
                                </div>
                            </div>
            
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Сохранить" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>
